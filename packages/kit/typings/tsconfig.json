{
	/* Generates the typings for client code */
	"compilerOptions": {
		"resolveJsonModule": true,
		"module": "esnext",
		"moduleResolution": "node",
		"target": "ES6",
		"esModuleInterop": true,
		"declaration": true,
		"outFile": "../index.d.ts"
	},
	"include": ["../src/runtime/**/*", "../src/ambient.d.ts"],
	"lib": ["ES2020", "dom", "node"]
}
