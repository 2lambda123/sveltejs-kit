{
	/* Generates the typings for client code */
	"compilerOptions": {
		"resolveJsonModule": true,
		"module": "esnext",
		"moduleResolution": "node",
		"target": "ES6",
		"esModuleInterop": true,
		"declaration": true,
		"emitDeclarationOnly": true,
		"skipLibCheck": true,
		/* Because of emitDeclarationOnly, this will actually only produce a index.d.ts file */
		"outFile": "../index.js"
	},
	"include": ["../src/runtime/**/*", "../src/ambient.d.ts"],
	"lib": ["ES2020", "dom", "node"]
}
