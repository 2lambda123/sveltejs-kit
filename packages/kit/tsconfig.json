{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"test": ["./test/types"],
			"types/*": ["./types/*.d.ts"],
			"@sveltejs/kit": ["./types/index"]
		}
	},
	"include": ["src/**/*", "test/**/*", "types/**/*.d.ts", "test/types.d.ts", "test/ambient.d.ts"]
}
