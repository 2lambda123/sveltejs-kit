{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"noImplicitAny": true,
		"target": "es2020",
		"module": "es2020",
		"moduleResolution": "node",
		"allowSyntheticDefaultImports": true,
		"paths": {
			"test": ["./types"],
			"test/*": ["./types/*"],
			"@sveltejs/kit": ["../types"]
		}
	},
	"include": ["src/**/*", "test/**/*", "types/**/*"]
}
