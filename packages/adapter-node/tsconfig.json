{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"noImplicitAny": true,
		"allowSyntheticDefaultImports": true,
		"target": "ES2022",
		"module": "ES2022",
		// `polka` and `@polka/url` types are incorrectly packaged,
		// so using this moduleResolution for now
		"moduleResolution": "Node",
		"baseUrl": ".",
		"paths": {
			"@sveltejs/kit": ["../kit/types/index"]
		}
	},
	"include": ["index.js", "src/**/*.js", "ambient.d.ts"]
}
