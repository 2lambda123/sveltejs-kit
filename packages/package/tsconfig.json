{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"noEmit": true,
		"strict": true,
		"target": "ES2022",
		"module": "Node16",
		"moduleResolution": "Node16",
		"allowSyntheticDefaultImports": true,
		"paths": {
			// internal use only
			"types": ["./types/index"]
		}
	},
	"include": ["src/**/*", "test/index.js", "types/**/*"],
	"exclude": ["src/test/fixtures/**/*", "src/test/watch/**/*"]
}
