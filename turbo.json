{
	"$schema": "https://turborepo.org/schema.json",
	"pipeline": {
		"build": {
			"dependsOn": ["^build"],
			"outputs": ["files", "dist", "assets"]
		},
		"check": {
			"outputs": []
		},
		"format": {},
		"test": {
			"dependsOn": ["$CI"],
			"outputs": []
		},
		"lint": {
			"dependsOn": ["format"],
			"outputs": []
		},
		"dev": {
			"cache": false
		}
	}
}
